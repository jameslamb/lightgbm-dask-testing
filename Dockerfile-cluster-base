FROM python:3.9-slim

ENV DEBIAN_FRONTEND=noninteractive
ENV LANG=C.UTF-8 LC_ALL=C.UTF-8

ARG DASK_VERSION

RUN apt-get update && \
    apt-get install -y --no-install-recommends \
        build-essential \
        cmake \
        libomp-dev && \
    pip install --no-cache-dir \
        blosc \
        bokeh \
        boto3 \
        dask==${DASK_VERSION} \
        dask-cloudprovider \
        dask-ml \
        distributed==${DASK_VERSION} \
        lz4 \
        numpy \
        pandas \
        scikit-learn && \
    # remove unnecessary file
    find \
        /usr/local/lib/python3.9/site-packages \
        -type f \
        \( \
        -name '*.c' \
        -o -name '*.cc' \
        -o -name '*.cpp' \
        -o -name '*.h' \
        -o -name '*.hpp' \
        -o -wholename '*botocore/data/cloudfront*' \
        -o -wholename '*botocore/data/sagemaker*' \
        -o -wholename '*dask/*tests/*' \
        -o -wholename '*dask_cloudprovider/*tests/*' \
        -o -wholename '*joblib/test/*' \
        -o -wholename '*numba/*tests/*' \
        -o -wholename '*numpy/*tests/*' \
        -o -wholename '*pandas/*tests/*' \
        -o -wholename '*scikit-learn/tests*' \
        -o -wholename '*scikit-learn/*/tests*' \
        -o -wholename '*scipy/*/tests*' \
        -o -wholename '*/__pycache__/*' \
        \) \
        -exec rm '{}' '+' && \
    rm -rf /var/lib/apt/lists/*
