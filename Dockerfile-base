FROM daskdev/dask-notebook:latest

RUN apt-get update && \
    apt-get install -y \
        --no-install-recommends \
        build-essential \
        cmake \
        lsof \
        net-tools && \
    rm -rf /var/lib/apt/lists/* && \
    conda install -y -c conda-forge \
        dask-cloudprovider \
        scikit-learn \
        dask-ml \
        numpy \
        pandas && \
        pip install --no-cache-dir \
            awscli
