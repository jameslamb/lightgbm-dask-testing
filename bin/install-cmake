#!/bin/bash

set -e -u -o pipefail

CMAKE_VERSION=${1}

declare -r install_script
install_script="cmake-${CMAKE_VERSION}-linux-$(arch).sh"

curl -O -L \
    "https://github.com/Kitware/CMake/releases/download/v${CMAKE_VERSION}/${install_script}"

mkdir /opt/cmake
sh "${install_script}" \
    --skip-license \
    --prefix=/opt/cmake

rm "./${install_script}"

ln -sf /opt/cmake/bin/cmake /usr/local/bin/cmake
